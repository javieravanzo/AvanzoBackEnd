  .header-title {
    text-align: center;
    margin-top: 10px;
    margin-bottom: 15px;
  }
  .body-title{
    text-align: justify;
    margin-left: 70px;
    margin-right: 70px;
    line-height: 100%;
  }
  .body-content{
    text-align: justify;
    font-size: 15px;
    margin-left: 70px;
    margin-right: 70px;
    margin-bottom: 40px;
  }
  .payment-title {
    text-align: justify;
    font-weight: bold;
    margin-left: 70px;
    margin-right: 70px;
  }
  .signature-image{
    margin-left: 0px;
    margin-right: 70px;
